# LocalStack Docker configuration
# Test against LocalStack AWS emulator

# LocalStack endpoint
CONFIG_S3_ENDPOINT_URL="http://localhost:4566"
CONFIG_S3_ACCESS_KEY="test"
CONFIG_S3_SECRET_KEY="test"
CONFIG_S3_REGION="us-east-1"
CONFIG_S3_USE_SSL=n
CONFIG_S3_BUCKET_PREFIX="msst-localstack"

# Enable AWS-compatible tests
CONFIG_TEST_BASIC=y
CONFIG_TEST_MULTIPART=y
CONFIG_TEST_VERSIONING=y
CONFIG_TEST_ACL=y
CONFIG_TEST_ENCRYPTION=y
CONFIG_TEST_LIFECYCLE=y
CONFIG_TEST_PERFORMANCE=n
CONFIG_TEST_STRESS=n
CONFIG_TEST_COMPATIBILITY=y

# Test parameters
CONFIG_TEST_RUN_MODE="sequential"
CONFIG_TEST_TIMEOUT=120
CONFIG_TEST_RETRY_COUNT=3
CONFIG_TEST_OBJECT_SIZES="1KB,1MB,10MB,100MB"
CONFIG_TEST_BUCKET_COUNT=5
CONFIG_TEST_OBJECT_COUNT=15

# Output settings
CONFIG_OUTPUT_FORMAT="json"
CONFIG_OUTPUT_VERBOSE=1
CONFIG_OUTPUT_DIR="./results"
CONFIG_OUTPUT_TIMESTAMP=y
CONFIG_OUTPUT_SAVE_LOGS=y

# No Ansible
CONFIG_ANSIBLE_ENABLED=n

# AWS vendor type (LocalStack emulates AWS)
CONFIG_VENDOR_TYPE="aws"

# No debug by default
CONFIG_DEBUG_ENABLED=n