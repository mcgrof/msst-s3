# Parallel ALL Test Configuration
# WARNING: This runs ALL tests simultaneously!
# Only use with adequate resources and for stress testing

# S3 endpoint for MinIO Docker container
CONFIG_S3_ENDPOINT_URL="http://localhost:9000"
CONFIG_S3_ACCESS_KEY="minioadmin"
CONFIG_S3_SECRET_KEY="minioadmin"
CONFIG_S3_REGION="us-east-1"
CONFIG_S3_BUCKET_PREFIX="msst-parallel"

# Enable all test categories
CONFIG_TEST_BASIC=y
CONFIG_TEST_MULTIPART=y
CONFIG_TEST_VERSIONING=y
CONFIG_TEST_ACL=y
CONFIG_TEST_ENCRYPTION=y
CONFIG_TEST_LIFECYCLE=y
CONFIG_TEST_PERFORMANCE=y
CONFIG_TEST_STRESS=y
CONFIG_TEST_COMPATIBILITY=y

# PARALLEL ALL MODE - Run everything at once!
CONFIG_TEST_RUN_MODE="parallel"
CONFIG_TEST_PARALLEL_ALL=y

# Test parameters
CONFIG_TEST_TIMEOUT=600
CONFIG_TEST_RETRY_COUNT=1
CONFIG_TEST_OBJECT_SIZES="1KB,1MB,10MB"
CONFIG_TEST_BUCKET_COUNT=3
CONFIG_TEST_OBJECT_COUNT=5

# Performance settings (reduced for parallel mode)
CONFIG_PERF_DURATION=30
CONFIG_PERF_CONCURRENT_CLIENTS=5
CONFIG_PERF_WARMUP_TIME=5
CONFIG_PERF_COLLECT_METRICS=y

# Stress settings (reduced for parallel mode)
CONFIG_STRESS_DURATION=60
CONFIG_STRESS_MAX_OBJECTS=1000
CONFIG_STRESS_CONCURRENT_OPS=20
CONFIG_STRESS_MIXED_WORKLOAD=y

# Output configuration
CONFIG_OUTPUT_FORMAT="json"
CONFIG_OUTPUT_VERBOSE=1
CONFIG_OUTPUT_DIR="./results/parallel-all"
CONFIG_OUTPUT_TIMESTAMP=y
CONFIG_OUTPUT_SAVE_LOGS=y

# Vendor configuration
CONFIG_VENDOR_TYPE="minio"

# Developer options
CONFIG_DEBUG_ENABLED=n
CONFIG_DEBUG_KEEP_BUCKETS=n