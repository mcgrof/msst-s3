# Docker demo configuration
# Automatically starts MinIO in Docker and populates test data

# MinIO Docker endpoint
CONFIG_S3_ENDPOINT_URL="http://localhost:9000"
CONFIG_S3_ACCESS_KEY="minioadmin"
CONFIG_S3_SECRET_KEY="minioadmin"
CONFIG_S3_REGION="us-east-1"
CONFIG_S3_USE_SSL=n
CONFIG_S3_BUCKET_PREFIX="msst-demo"

# Enable basic tests for demo
CONFIG_TEST_BASIC=y
CONFIG_TEST_MULTIPART=y
CONFIG_TEST_VERSIONING=y
CONFIG_TEST_ACL=n
CONFIG_TEST_ENCRYPTION=n
CONFIG_TEST_LIFECYCLE=n
CONFIG_TEST_PERFORMANCE=n
CONFIG_TEST_STRESS=n
CONFIG_TEST_COMPATIBILITY=n

# Demo test parameters
CONFIG_TEST_RUN_MODE="sequential"
CONFIG_TEST_TIMEOUT=60
CONFIG_TEST_RETRY_COUNT=2
CONFIG_TEST_OBJECT_SIZES="1KB,1MB,10MB"
CONFIG_TEST_BUCKET_COUNT=3
CONFIG_TEST_OBJECT_COUNT=10

# Output settings
CONFIG_OUTPUT_FORMAT="json"
CONFIG_OUTPUT_VERBOSE=2
CONFIG_OUTPUT_DIR="./results"
CONFIG_OUTPUT_TIMESTAMP=y
CONFIG_OUTPUT_SAVE_LOGS=y

# No Ansible for demo
CONFIG_ANSIBLE_ENABLED=n

# MinIO vendor type
CONFIG_VENDOR_TYPE="minio"

# Enable debug for demo
CONFIG_DEBUG_ENABLED=y
CONFIG_DEBUG_KEEP_BUCKETS=y