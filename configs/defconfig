# Default configuration for MSST-S3

# S3 Endpoint
CONFIG_S3_ENDPOINT_URL="http://localhost:9000"
CONFIG_S3_ACCESS_KEY="minioadmin"
CONFIG_S3_SECRET_KEY="minioadmin"
CONFIG_S3_REGION="us-east-1"
# CONFIG_S3_USE_SSL is not set
CONFIG_S3_BUCKET_PREFIX="msst-test"

# Enable basic tests by default
CONFIG_TEST_BASIC=y
CONFIG_TEST_MULTIPART=y
# CONFIG_TEST_VERSIONING is not set
# CONFIG_TEST_ACL is not set
# CONFIG_TEST_ENCRYPTION is not set
# CONFIG_TEST_LIFECYCLE is not set
# CONFIG_TEST_PERFORMANCE is not set
# CONFIG_TEST_STRESS is not set
# CONFIG_TEST_COMPATIBILITY is not set

# Test parameters
CONFIG_TEST_RUN_MODE="sequential"
CONFIG_TEST_TIMEOUT=300
CONFIG_TEST_RETRY_COUNT=3
CONFIG_TEST_OBJECT_SIZES="1KB,1MB,10MB,100MB"
CONFIG_TEST_BUCKET_COUNT=5
CONFIG_TEST_OBJECT_COUNT=10

# Output
CONFIG_OUTPUT_FORMAT="json"
CONFIG_OUTPUT_VERBOSE=1
CONFIG_OUTPUT_DIR="./results"
CONFIG_OUTPUT_TIMESTAMP=y
CONFIG_OUTPUT_SAVE_LOGS=y

# Vendor
CONFIG_VENDOR_TYPE="generic"

# Debug
# CONFIG_DEBUG_ENABLED is not set