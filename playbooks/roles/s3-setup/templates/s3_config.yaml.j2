---
# S3 configuration generated by Ansible
# Generated at: {{ ansible_date_time.iso8601 }}

# S3 Endpoint Configuration
s3_endpoint_url: "{{ s3_endpoint_url | default('http://localhost:9000') }}"
s3_access_key: "{{ s3_access_key | default('minioadmin') }}"
s3_secret_key: "{{ s3_secret_key | default('minioadmin') }}"
s3_region: "{{ s3_region | default('us-east-1') }}"
s3_use_ssl: {{ s3_use_ssl | default(false) }}
s3_verify_ssl: {{ s3_verify_ssl | default(true) }}
s3_bucket_prefix: "{{ s3_bucket_prefix | default('msst-test') }}"

# Test Selection
test_basic: {{ test_basic | default(true) }}
test_multipart: {{ test_multipart | default(true) }}
test_versioning: {{ test_versioning | default(false) }}
test_acl: {{ test_acl | default(false) }}
test_encryption: {{ test_encryption | default(false) }}
test_lifecycle: {{ test_lifecycle | default(false) }}
test_performance: {{ test_performance | default(false) }}
test_stress: {{ test_stress | default(false) }}
test_compatibility: {{ test_compatibility | default(false) }}

# Test Parameters
test_run_mode: "{{ test_run_mode | default('sequential') }}"
test_parallel_jobs: {{ test_parallel_jobs | default(4) }}
test_timeout: {{ test_timeout | default(300) }}
test_retry_count: {{ test_retry_count | default(3) }}
test_object_sizes: "{{ test_object_sizes | default('1KB,1MB,10MB,100MB') }}"
test_bucket_count: {{ test_bucket_count | default(5) }}
test_object_count: {{ test_object_count | default(10) }}

# Performance Test Configuration
{% if test_performance | default(false) %}
perf_duration: {{ perf_duration | default(60) }}
perf_concurrent_clients: {{ perf_concurrent_clients | default(10) }}
perf_warmup_time: {{ perf_warmup_time | default(10) }}
perf_collect_metrics: {{ perf_collect_metrics | default(true) }}
{% endif %}

# Stress Test Configuration
{% if test_stress | default(false) %}
stress_duration: {{ stress_duration | default(300) }}
stress_max_objects: {{ stress_max_objects | default(10000) }}
stress_concurrent_ops: {{ stress_concurrent_ops | default(100) }}
stress_mixed_workload: {{ stress_mixed_workload | default(true) }}
{% endif %}

# Output Configuration
output_format: "{{ output_format | default('json') }}"
output_verbose: {{ output_verbose | default(1) }}
output_dir: "{{ results_dir }}"
output_timestamp: {{ output_timestamp | default(true) }}
output_save_logs: {{ output_save_logs | default(true) }}

# Vendor Configuration
vendor_type: "{{ vendor_type | default('generic') }}"
vendor_skip_tests: "{{ vendor_skip_tests | default('') }}"

# Debug Options
debug_enabled: {{ debug_enabled | default(false) }}
{% if debug_enabled | default(false) %}
debug_keep_buckets: {{ debug_keep_buckets | default(false) }}
debug_dump_requests: {{ debug_dump_requests | default(false) }}
debug_slow_mode: {{ debug_slow_mode | default(false) }}
{% endif %}